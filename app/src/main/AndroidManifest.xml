<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anara.barber">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.FutureBookingActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".Activities.ShowIncomeActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".MainActivityOwner"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".Activities.MobileNumberActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ChooseActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".Activities.OwnerDetailsActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".Activities.BarberDetailsActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".Activities.SalonDetailsActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".Activities.OTPActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".MainActivityBarbers"
            android:theme="@style/NoActionBar" />
    </application>

</manifest>